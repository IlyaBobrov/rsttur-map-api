<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_objects"
        android:layout_width="match_parent"

        android:layout_height="150dp">


        <!--todo:Маштабируемость по ширене (с весом) через линейный лайаут-->

        <TextView
            android:id="@+id/txt_name_objects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/icon_category"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название объекта" />

        <TextView
            android:id="@+id/txt_description_objects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/icon_category"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_objects"
            tools:text="Описание обекта" />

        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>