<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAndroidApp" parent="Theme.MaterialComponents.DayNight"></style>

    <style name="Theme.ProductCalc" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryLight</item>
        <item name="android:textColorAlertDialogListItem">@color/colorPrimaryDarkNight</item>
        <item name="android:textColor">@color/colorSecondaryText</item>


        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDarkNight</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/navigationBarColorNight
        </item>
        <item name="android:colorPrimary" tools:targetApi="l">@color/colorPrimaryNight</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/titleStyle</item>
    </style>
    <!-- ActionBar title styles -->
    <style name="titleStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_action_bar_big</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_close</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_close</item>
    </style>
</resources>